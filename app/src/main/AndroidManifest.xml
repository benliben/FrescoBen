<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.benben.fresco">

    <!--网络权限-->
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:name=".ui.MyApp"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".ui.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!--加载网络图片-->
        <activity android:name=".ui.activity.BeginActivity"></activity>
        <!--进度条-->
        <activity android:name=".ui.activity.ProgressBarImageActivity"></activity>
        <!--缩放-->
        <activity android:name=".ui.activity.TheZoomActivity"></activity>
        <!--圆-->
        <activity android:name=".ui.activity.RoundActivity"></activity>
        <!--控制构造器-->
        <activity android:name=".ui.activity.ControllerBuilDerActivity"></activity>
        <!--渐变-->
        <activity android:name=".ui.activity.ChangeJPEGActivity"></activity>
        <!--多图请求及图片复用-->
        <activity android:name=".ui.activity.SwitchActivity"></activity>
        <!--监听事件-->
        <activity android:name=".ui.activity.MonitorActivity"></activity>
    </application>

</manifest>